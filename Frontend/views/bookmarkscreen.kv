<BookmarkScreen>:
    name:"Bookmark"
    id:abc
    orientation: "vertical"
    spacing: 10
    space_x:self.size[0]/3

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size



    BoxLayout:
        size_hint_y: None
        height: 50
        pos_hint:{'top':1}

        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)

            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Bookmarks"
            bold: True
            size_hint_x: .9


        FlatButton:
            text: "x"
            size_hint_x: .1
            on_release:root.closebutton()

    BoxLayout:
        height: 490
        pos_hint:{'center_x':.5,'center_y':.5}
        size_hint_y:None
        orientation:"vertical"

        Accordion:
            id:acc
            orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: 50
        pos_hint:{'bottom':1}
        orientation:'horizontal'
        canvas.before:
            Color:
                rgba:  (.06,.45,.45,1)

            Rectangle
                size: self.size
                pos: self.pos


        Button:
            text: "Show"
            size_hint_y:None
            size_hint_x:None
            height: 40
            background_color: (.06,.45,.45,1)
            background_normal: ""
            #pos_hint: {'left': .5,'bottom':1}
            on_release: root.showbookmarks()
        Button:
            text: "Prev"
            size_hint_y:None
            size_hint_x:None
            height: 40
            background_color: (.06,.45,.45,1)
            background_normal: ""
            #pos_hint: {'left': 0,'bottom':1}
            on_release:

        Button:
            text: "Next"
            size_hint_y:None
            size_hint_x:None
            height: 40
            background_color: (.06,.45,.45,1)
            background_normal: ""
            #pos_hint: {'left': .75,'bottom':1}
            on_release:
        Button:
            text: "Back"
            size_hint_y:None
            size_hint_x:None
            height: 40
            background_color: (.06,.45,.45,1)
            background_normal: ""
            #pos_hint: {'left': 0,'bottom':1}
            on_release: app.root.current="homepage"
        Button:
            text: "Clear Bookmarks"
            size_hint_y:None
            size_hint_x:None
            height: 40
            background_color: (.06,.45,.45,1)
            background_normal: ""
            #pos_hint: {'left': .75,'bottom':1}
            on_release: root.deletebookmarks()
