        Button:
            text: "Signout"
    #        size_hint_y:None
    #        size_hint_x:None
    #        height: 40
            background_color: (1,0,0,.75)
            background_normal: ""
            #pos_hint: {'left': 1,'bottom':1}
            on_release: root.logout()
